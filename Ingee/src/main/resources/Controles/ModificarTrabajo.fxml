<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tu.paquete.de.controles.ModificarTrabajoController">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
    </columnConstraints>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="ID Trabajo:" GridPane.rowIndex="0" />
    <TextField fx:id="txtIdTrabajo" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Cliente:" GridPane.rowIndex="1" />
    <TextField fx:id="txtCliente" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Marca Vehículo:" GridPane.rowIndex="2" />
    <TextField fx:id="txtMarca" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Modelo Vehículo:" GridPane.rowIndex="3" />
    <TextField fx:id="txtModelo" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Descripción:" GridPane.rowIndex="4" />
    <TextArea fx:id="txtDescripcion" prefHeight="100.0" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Monto:" GridPane.rowIndex="5" />
    <TextField fx:id="txtMonto" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Estado de Trabajo:" GridPane.rowIndex="6" />
    <ComboBox fx:id="cmbEstadoTrabajo" prefWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Label text="Estado de Facturación:" GridPane.rowIndex="7" />
    <ComboBox fx:id="cmbEstadoFacturacion" prefWidth="Infinity" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="8">
        <children>
            <Button fx:id="btnCancelar" onAction="#onCancelarClick" text="Cancelar" />
            <Button fx:id="btnGuardar" onAction="#onGuardarClick" defaultButton="true" text="Guardar Cambios" />
        </children>
        <padding>
            <Insets top="15.0" />
        </padding>
    </HBox>

    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>

</GridPane>