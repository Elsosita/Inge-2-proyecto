<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="581.0" prefWidth="836.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controles.ConsultarTrabajoController">

    <!-- Título arriba -->
    <top>
        <VBox alignment="CENTER">
            <padding>
                <Insets bottom="15" left="10" right="10" top="15" />
            </padding>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Consultar Trabajos" />
        </VBox>
    </top>

    <!-- Contenido central -->
    <center>
        <VBox alignment="CENTER" spacing="15" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="15" right="15" top="10" />
            </padding>

            <!-- Filtros -->
            <HBox alignment="CENTER" spacing="10">
                <Label text="Buscar por cliente o patente:" />
                <TextField fx:id="txtBuscar" promptText="Ej: Juan / ABC123" />
                <Button onAction="#onBuscar" text="Buscar" />
            </HBox>

            <!-- Tabla de trabajos -->
            <TableView fx:id="tablaTrabajos" prefHeight="400" prefWidth="750">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colDescripcion" prefWidth="150" text="Descripción" />
                    <TableColumn fx:id="colCliente" prefWidth="150" text="Cliente" />
                    <TableColumn fx:id="colPatente" prefWidth="75" text="Patente" />
                    <TableColumn fx:id="colFecha" prefWidth="80" text="Fecha" />
                    <TableColumn fx:id="colMonto" prefWidth="100" text="Monto" />
                    <TableColumn fx:id="colEstadoPago" prefWidth="80" text="Pago" />
                    <TableColumn fx:id="colEstadoTrabajo" prefWidth="120.0" text="Estado" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Botones abajo -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15">
            <padding>
                <Insets bottom="10" left="15" right="15" top="10" />
            </padding>

            <Button onAction="#onModificar" text="Modificar" />
            <Button onAction="#onCerrarVentana" text="Cerrar" />
        </HBox>
    </bottom>

</BorderPane>
