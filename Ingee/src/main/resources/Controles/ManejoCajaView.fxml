<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="465.0" prefWidth="569.0"
            styleClass="ventana-manejo-caja"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controles.ManejoCajaController">

    <VBox alignment="TOP_CENTER" spacing="25.0"
          AnchorPane.topAnchor="40.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.bottomAnchor="80.0">

        <Label styleClass="label-titulo-caja" text="Manejo de Caja" />

        <Button fx:id="btnPago" onAction="#abrirPago" prefHeight="65.0" prefWidth="350.0"
                 styleClass="boton-menu" text="Ingreso de Pago" />

        <Button fx:id="btnRetiro" onAction="#abrirRetiro" prefHeight="65.0" prefWidth="350.0"
                styleClass="boton-menu" text="Ingreso de Retiro" />

    </VBox>

    <Button fx:id="btnVolver" layoutX="20.0" layoutY="400.0"
            onAction="#volver"
            prefHeight="40.0" prefWidth="100.0"
            styleClass="boton-Volver" text="Volver"
            AnchorPane.leftAnchor="20.0" AnchorPane.bottomAnchor="25.0" />

    <stylesheets>

        <URL value="@Css/manejo_caja.css" />
    </stylesheets>
</AnchorPane>