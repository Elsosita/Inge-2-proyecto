<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="811.0" prefWidth="553.0" style="-fx-background-color: #f9f9f9; -fx-padding: 20;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controles.AgregarTrabajoController">

    <VBox layoutX="31.2" layoutY="30.4" prefHeight="798.0" prefWidth="539.0" spacing="10" AnchorPane.bottomAnchor="3.0" AnchorPane.leftAnchor="11.0" AnchorPane.rightAnchor="3.0" AnchorPane.topAnchor="10.0">

        <Label prefWidth="126.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Nuevo Trabajo" />
        <TextField fx:id="txtCliente" promptText="Nombre del cliente" />
      <ListView fx:id="listaSugerencias" prefHeight="25.0" prefWidth="274.0" visible="true" />

      <Button mnemonicParsing="false" onAction="#onAgregarNuevoCliente" text="Agregar nuevo cliente" />

        <TextField fx:id="txtPatente" promptText="Patente del vehículo" />
      <ListView fx:id="listaPatentes" prefHeight="25.0" prefWidth="365.0" />
      <TextField fx:id="txtMarca" promptText="Marca del vehículo" />
        <TextField fx:id="txtModelo" promptText="Modelo del vehículo" />
        <TextField fx:id="txtTelefono" promptText="Teléfono del cliente" />
        <TextField fx:id="txtDescripcion" promptText="Descripción del trabajo" />
      <TextField fx:id="txtMonto" promptText="Monto" />

        <ComboBox fx:id="cbEstadoPago" promptText="Estado de pago">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="PENDIENTE" />
                    <String fx:value="PAGADO" />
                </FXCollections>
            </items>
        </ComboBox>

        <ComboBox fx:id="cbEstadoFacturacion" promptText="Estado de facturación">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="NOFACTURADO" />
                    <String fx:value="FACTURADO" />
                </FXCollections>
            </items>
        </ComboBox>
        <Label text="¿Tiene aseguradora?" />
        <ComboBox fx:id="cbTieneAseguradora">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="No" />
                    <String fx:value="Sí" />
                </FXCollections>
            </items>
        </ComboBox>

        <Label text="Seleccione aseguradora" />
        <ComboBox fx:id="cbAseguradora" disable="true" promptText="Seleccione aseguradora..." />
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Tipo de orden:" />
            <ComboBox fx:id="cbTipoOrden" onAction="#onTipoOrdenChanged" prefWidth="150" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Archivo PDF:" />
            <TextField fx:id="txtRutaArchivo" editable="false" prefWidth="220" promptText="Ruta del archivo" />
            <Button fx:id="btnSeleccionarArchivo" onAction="#onSeleccionarArchivo" text="Seleccionar..." />
        </HBox>
        <HBox>
            <Button onAction="#onGuardar" text="Guardar" />
            <Button onAction="#onCancelar" text="Cancelar" />
        </HBox>

        <Label fx:id="lblMensaje" textFill="green" />

    </VBox>
</AnchorPane>
