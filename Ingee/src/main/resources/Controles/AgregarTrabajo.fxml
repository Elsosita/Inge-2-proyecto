<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controles.AgregarTrabajoController"
            prefWidth="400" prefHeight="400"
            style="-fx-background-color: #f9f9f9; -fx-padding: 20;">

    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <Label text="Nuevo Trabajo" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TextField fx:id="txtPatente" promptText="Patente del vehículo"/>
        <TextField fx:id="txtModelo" promptText="Modelo del vehículo"/>
        <TextField fx:id="txtDescripcion" promptText="Descripción del trabajo"/>
        <TextField fx:id="txtCliente" promptText="Nombre del cliente"/>
        <TextField fx:id="txtTelefono" promptText="Teléfono del cliente"/>

        <HBox spacing="10" alignment="center">
            <Button text="Guardar" onAction="#onGuardar"/>
            <Button text="Cancelar" onAction="#onCancelar"/>
        </HBox>

        <Label fx:id="lblMensaje" textFill="green"/>

    </VBox>
</AnchorPane>