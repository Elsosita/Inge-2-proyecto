<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="200" prefWidth="400" style="-fx-background-color: #F5FFFA;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controles.AperturaCajaController">

    
    <children>
        <Label layoutX="20" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Apertura de Caja" textFill="#0d0d0d" />

        <Label layoutX="20" layoutY="60" text="Fecha:" textFill="#0d0d0d" />
        <Label fx:id="lblFecha" layoutX="70" layoutY="60" />

        <Label layoutX="20" layoutY="90" text="Hora:" textFill="#1d1d1e" />
        <Label fx:id="lblHora" layoutX="70" layoutY="90" />

        <Label layoutX="20" layoutY="120" text="Monto inicial:" textFill="#070707" />
        <TextField fx:id="txtMontoInicial" layoutX="120" layoutY="115" prefWidth="150" style="-fx-background-color: #ADD8E6;" />

        <Button fx:id="btnAceptar" layoutX="150" layoutY="150" onAction="#onAceptar" style="-fx-background-color: #3b82f6;" text="Aceptar" />

    </children>
   <effect>
      <Glow />
   </effect>
</AnchorPane>
