<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="400.0"
            styleClass="root-plano"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controles.AperturaCajaController">

    <VBox alignment="TOP_CENTER" spacing="20.0"
          AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="30.0">

        <Label styleClass="label-titulo" text="APERTURA DE CAJA" />

        <HBox alignment="CENTER" spacing="20.0">
            <Label text="Fecha:" styleClass="label-fecha-hora" />
            <Label fx:id="lblFecha" styleClass="label-valor" />
            <Label text="Hora:" styleClass="label-fecha-hora" />
            <Label fx:id="lblHora" styleClass="label-valor" />
        </HBox>

        <Label text="Ingrese Monto de Apertura:" styleClass="label-input-titulo" />
        <TextField fx:id="txtMontoInicial" promptText="0.00" styleClass="text-field-caja" />

        <Button fx:id="btnAceptar" onAction="#onAceptar" prefWidth="120.0" styleClass="button-aceptar" text="Aceptar" />

    </VBox>

    <stylesheets>
        <URL value="@Css/Caja.css" />
    </stylesheets>
</AnchorPane>