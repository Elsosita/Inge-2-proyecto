<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="597.0"
            styleClass="root-caja"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controles.CerrarCajaController">

    <VBox alignment="CENTER" spacing="15.0"
          AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="30.0">

        <Label styleClass="label-titulo" text="Cerrar Caja" />
        <Label prefHeight="10.0" /> <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Monto Total:" prefWidth="120.0" styleClass="label-input-titulo" />
        <TextField fx:id="txtTotal" editable="false" prefWidth="250.0" styleClass="text-field-readonly" HBox.hgrow="ALWAYS" />
    </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Monto Efectivo:" prefWidth="120.0" styleClass="label-input-titulo" />
            <TextField fx:id="txtEfectivo" editable="false" prefWidth="250.0" styleClass="text-field-readonly" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Monto Digital:" prefWidth="120.0" styleClass="label-input-titulo" />
            <TextField fx:id="txtDigital" editable="false" prefWidth="250.0" styleClass="text-field-readonly" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Retiros Sueldos:" prefWidth="120.0" styleClass="label-input-titulo" />
            <TextField fx:id="txtRetirosSueldos" editable="false" prefWidth="150.0" styleClass="text-field-readonly" HBox.hgrow="ALWAYS" />
            <Button onAction="#onVerDetalleSueldos" prefWidth="120.0" styleClass="button-secundario" text="Ver Detalle" />
        </HBox>

        <Label prefHeight="20.0" /> <Button onAction="#onAceptar" prefHeight="40.0" prefWidth="200.0" styleClass="button-aceptar" text="Aceptar" />

    </VBox>

    <stylesheets>
        <URL value="@Css/cerrar_caja.css" />
    </stylesheets>
</AnchorPane>